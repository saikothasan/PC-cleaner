<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TitleForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="NavigationBorderBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="StatusBarBorderBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FFFFFF"/>
    
    <!-- Card Colors -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="CardHoverBrush" Color="#3C3C3C"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#0E639C"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#1177BB"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFF"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#808080"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#2ED573"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFA502"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF4757"/>
    
    <!-- Progress Colors -->
    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ProgressForegroundBrush" Color="#007ACC"/>
    
</ResourceDictionary>
